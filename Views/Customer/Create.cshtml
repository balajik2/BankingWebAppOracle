@{
    ViewData["Title"] = "Create Customer";
}

<h2>Create Customer</h2>

<form asp-action="Create" asp-controller="Customer" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label for="FirstName" class="form-label">First Name</label>
        <input id="FirstName" name="FirstName" class="form-control" required maxlength="50" />
        <span class="text-danger" data-valmsg-for="FirstName"></span>
    </div>

    <div class="mb-3">
        <label for="LastName" class="form-label">Last Name</label>
        <input id="LastName" name="LastName" class="form-control" required maxlength="50" />
        <span class="text-danger" data-valmsg-for="LastName"></span>
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input id="Email" name="Email" type="email" class="form-control" maxlength="100" />
        <span class="text-danger" data-valmsg-for="Email"></span>
    </div>

    <div class="mb-3">
        <label for="Phone" class="form-label">Phone</label>
        <input id="Phone" name="Phone" class="form-control" maxlength="15" />
        <span class="text-danger" data-valmsg-for="Phone"></span>
    </div>

    <div class="mb-3">
        <label for="Address" class="form-label">Address</label>
        <input id="Address" name="Address" class="form-control" maxlength="200" />
        <span class="text-danger" data-valmsg-for="Address"></span>
    </div>

    <div class="mb-3">
        <label for="Dob" class="form-label">Date of Birth</label>
        <input id="Dob" name="Dob" type="date" class="form-control" />
        <span class="text-danger" data-valmsg-for="Dob"></span>
    </div>

    <div class="mb-3">
        <label for="Gender" class="form-label">Gender</label>
        <select id="Gender" name="Gender" class="form-select">
            <option value="">-- Select --</option>
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
        <span class="text-danger" data-valmsg-for="Gender"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" asp-controller="Customer" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
