@using BankingWebApp.Models
@model AccountEditViewModel
@{
    ViewData["Title"] = "Edit Account";
}

<h2>Edit Account</h2>

<form asp-action="Edit" asp-controller="Account" asp-route-id="@Model.AccountId" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="AccountId" />

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="ACTIVE">ACTIVE</option>
            <option value="CLOSED">CLOSED</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="Account" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
