@{
    ViewData["Title"] = "Create Account";
}

<h2>Create Account</h2>

<form asp-action="Create" asp-controller="Account" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label for="CustomerId" class="form-label">Customer ID</label>
        <input id="CustomerId" name="CustomerId" type="number" class="form-control" required />
        <span class="text-danger" data-valmsg-for="CustomerId" data-valmsg-replace="true"></span>
    </div>

    <div class="mb-3">
        <label for="BranchId" class="form-label">Branch ID</label>
        <input id="BranchId" name="BranchId" type="number" class="form-control" required />
        <span class="text-danger" data-valmsg-for="BranchId" data-valmsg-replace="true"></span>
    </div>

    <div class="mb-3">
        <label for="AccountType" class="form-label">Account Type</label>
        <select id="AccountType" name="AccountType" class="form-select" required>
            <option value="">-- Select --</option>
            <option value="SAVINGS">SAVINGS</option>
            <option value="CURRENT">CURRENT</option>
        </select>
        <span class="text-danger" data-valmsg-for="AccountType" data-valmsg-replace="true"></span>
    </div>

    <div class="mb-3">
        <label for="Balance" class="form-label">Opening Balance</label>
        <input id="Balance" name="Balance" type="number" step="0.01" class="form-control" required />
        <span class="text-danger" data-valmsg-for="Balance" data-valmsg-replace="true"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" asp-controller="Account" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
