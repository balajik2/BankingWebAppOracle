@using BankingWebApp.Models
@model LoanEditViewModel
@{
    ViewData["Title"] = "Edit Loan";
}
<h2>Edit Loan</h2>
<form asp-action="Edit" asp-controller="Loan" asp-route-id="@Model.LoanId" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="LoanId" />

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option>ACTIVE</option>
            <option>APPROVED</option>
            <option>CLOSED</option>
            <option>PENDING</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="Loan" class="btn btn-secondary">Cancel</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
